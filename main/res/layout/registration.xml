<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/bg">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/singup"
        android:layout_gravity="center"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:hint="Enter your Username"
        android:textColorHint="#fafafa"
        android:background="#009688"
        android:alpha="0.3"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#fafafa"
        android:id="@+id/Edit_t3"
        />
    <EditText
        android:layout_marginTop="25dp"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:hint="Create your Password"
        android:textColorHint="#fafafa"
        android:background="#009688"
        android:alpha="0.3"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#fafafa"
        android:id="@+id/Edit_t4"
        />
    <EditText
        android:layout_marginTop="25dp"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:hint="Confirm your Password"
        android:textColorHint="#fafafa"
        android:background="#009688"
        android:alpha="0.3"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#fafafa"
        android:id="@+id/Edit_t5"
        />
    <EditText
        android:layout_marginTop="25dp"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:hint="Enter your Email/Phone No."
        android:textColorHint="#fafafa"
        android:background="#009688"
        android:alpha="0.3"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#fafafa"
        android:id="@+id/Edit_t6"
        />

    <Button
        android:id="@+id/btn_btn2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="#f44336"
        android:gravity="center"
        android:text="Sign Up"
        android:textSize="20dp"
        android:textColor="#eeeeee"
        />

</LinearLayout>