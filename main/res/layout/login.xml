<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LogIn" android:background="@drawable/bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/login" />

    <!-- alpha is for background opacity -->
    <EditText
        android:id="@+id/Edit_t1"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#009688"
        android:alpha="0.3"
        android:gravity="center"
        android:hint="Enter your Email/Phone"
        android:textColorHint="#fafafa"
        android:textSize="20dp"
        android:textColor="#fafafa"
        />

    <EditText
        android:id="@+id/Edit_t2"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="#009688"
        android:alpha="0.3"
        android:gravity="center"
        android:hint="Enter your Password"
        android:textColorHint="#fafafa"
        android:textSize="20dp"
        android:textColor="#fafafa"
        />

    <Button
        android:id="@+id/btn_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="#f44336"
        android:gravity="center"
        android:text="Log In"
        android:textSize="20dp"
        android:textColor="#eeeeee"
        />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_btn4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="create an Account/sign up"
        android:textColor="#eeeeee"
        android:textSize="15dp"
        android:background="@android:color/transparent"
        />


</LinearLayout>